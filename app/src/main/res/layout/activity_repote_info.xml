<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Reporte.Repote_info">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="348dp"
        android:layout_height="363dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:alpha=".80"
        app:srcCompat="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="0dp"
        android:alpha=".80"
        app:srcCompat="@android:color/background_light" />

    <ImageView
        android:id="@+id/inicio_IR"
        android:layout_width="61dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:onClick="inicio2"
        app:srcCompat="@drawable/house" />

    <ImageView
        android:id="@+id/repo_IR"
        android:layout_width="59dp"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="101dp"
        app:srcCompat="@drawable/network"
        android:layout_alignParentLeft="true"
        android:onClick="repo_EB"
        android:layout_marginLeft="101dp" />

    <ImageView
        android:id="@+id/Bita_IF"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="121dp"
        android:onClick="Bita_EB"
        app:srcCompat="@drawable/notebook" />

    <ImageView
        android:id="@+id/alarmas"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="39dp"
        android:onClick="Alarma_IR"
        app:srcCompat="@drawable/alarm" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:srcCompat="@color/colorPrimary"
        android:alpha=".80"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Información de los reportes"
        android:textColor="#0011ff"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/Sintomas__IR"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView9"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Sintomas previos"
        android:inputType="text"
        android:textColor="#0011ff"
        android:textColorHint="#0011ff"
        android:theme="@style/Campos_alar" />

    <EditText
        android:id="@+id/otros_IR"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:hint="Otros datos"
        android:inputType="text"
        android:textColor="#0011ff"
        android:textColorHint="#0011ff"
        android:theme="@style/Campos_alar" />


    <Button
        android:id="@+id/reporteIF"
        android:layout_width="217dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:background="@drawable/botones"
        android:onClick="Editar_reporte"
        android:text="Editar datos"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/Direccion_IR"
        android:layout_width="325dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="Dirección"
        android:textColor="#0011ff"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/Bita_IF" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Bita_IF"
        android:layout_alignParentTop="true"
        android:layout_marginTop="236dp"
        android:text="Nivel del ataque epileptico"
        android:textColor="#0011ff"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/tipo_ata"
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignStart="@+id/imageView13"
        android:layout_marginBottom="-237dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tipo_ata"
        android:layout_alignEnd="@+id/repo_IR"
        android:text="Tipo de ataque"
        android:textColor="#0011ff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Sintomas__IR"
        android:layout_marginBottom="226dp"
        android:text="Fecha:"
        android:textColor="#0011ff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Fecha_IR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:text="TextView"
        android:textColor="#0011ff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/Bita_IF"
        android:layout_alignTop="@+id/textView12"
        android:text="Hora:"
        android:textColor="#0011ff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Hora_IR"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView12"
        android:layout_marginStart="-121dp"
        android:layout_toEndOf="@+id/Bita_IF"
        android:text="la hora"
        android:textColor="#0011ff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Direccion_IR"
        android:layout_alignTop="@+id/imageView13"
        android:text="Dirección del ataque"
        android:textColor="#0011ff"
        android:textSize="20dp" />

</RelativeLayout>